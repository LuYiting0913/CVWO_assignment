<h1>Edit Student</h1>

<%= form_with model: @students do |form| %>   
    <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :matric %><br>
        <%= form.text_area :matric %>
    </div>

    <div>
        <%= form.label :gender %><br>
        <%= form.text_area :gender %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>

<%= link_to  "Back To Main", root_path %>